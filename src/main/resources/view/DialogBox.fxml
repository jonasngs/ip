<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true">
        <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
        </padding>
            <font>
                <Font name="Franklin Gothic" size="13.0" />
            </font>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets left="10.0" top="10.0" />
         </HBox.margin>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="40.0" left="5.0" right="15.0" top="10.0" />
    </padding>
   <effect>
      <InnerShadow />
   </effect>
</fx:root>
